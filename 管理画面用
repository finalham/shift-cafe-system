<p class="p1"><span class="Apple-converted-space">    </span>&lt;h1&gt;シフト管理画面&lt;/h1&gt;</p>
<p class="p1"><span class="Apple-converted-space">    </span>&lt;p&gt;従業員の打刻データ一覧を管理できます。&lt;/p&gt;</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">    </span>&lt;table id="employeeTable"&gt;</p>
<p class="p1"><span class="Apple-converted-space">        </span>&lt;thead&gt;</p>
<p class="p1"><span class="Apple-converted-space">            </span>&lt;tr&gt;</p>
<p class="p1"><span class="Apple-converted-space">                </span>&lt;th&gt;名前&lt;/th&gt;</p>
<p class="p1"><span class="Apple-converted-space">                </span>&lt;th&gt;打刻日時&lt;/th&gt;</p>
<p class="p1"><span class="Apple-converted-space">                </span>&lt;th&gt;ステータス&lt;/th&gt;</p>
<p class="p1"><span class="Apple-converted-space">                </span>&lt;th&gt;操作&lt;/th&gt;</p>
<p class="p1"><span class="Apple-converted-space">            </span>&lt;/tr&gt;</p>
<p class="p1"><span class="Apple-converted-space">        </span>&lt;/thead&gt;</p>
<p class="p1"><span class="Apple-converted-space">        </span>&lt;tbody&gt;</p>
<p class="p1"><span class="Apple-converted-space">            </span>&lt;!-- データがここに挿入されます --&gt;</p>
<p class="p1"><span class="Apple-converted-space">        </span>&lt;/tbody&gt;</p>
<p class="p1"><span class="Apple-converted-space">    </span>&lt;/table&gt;</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">    </span>&lt;script&gt;</p>
<p class="p1"><span class="Apple-converted-space">        </span>const SS_ID = "1zitwMcMRaM3d6Irej738XZS5rjX9v_Pf5PmKxf9iI90"; // GoogleスプレッドシートID</p>
<p class="p1"><span class="Apple-converted-space">        </span>const API_URL = `https://script.google.com/macros/s/AKfycbz6qkC8T_a6mkQQ_wgaO85qjZl8aWUiamukBtpf-syC8xERgPrS10j3pHYN8B2DfP5B/exec?action=employees`;</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">        </span>// 従業員データを取得してテーブルに表示</p>
<p class="p1"><span class="Apple-converted-space">        </span>async function fetchEmployees() {</p>
<p class="p1"><span class="Apple-converted-space">            </span>try {</p>
<p class="p1"><span class="Apple-converted-space">                </span>const res = await fetch(API_URL);</p>
<p class="p1"><span class="Apple-converted-space">                </span>const data = await res.json();</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">                </span>const tableBody = document.querySelector("#employeeTable tbody");</p>
<p class="p1"><span class="Apple-converted-space">                </span>tableBody.innerHTML = "";</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">                </span>data.forEach(row =&gt; {</p>
<p class="p1"><span class="Apple-converted-space">                    </span>const tr = document.createElement("tr");</p>
<p class="p1"><span class="Apple-converted-space">                    </span>tr.innerHTML = `</p>
<p class="p1"><span class="Apple-converted-space">                        </span>&lt;td&gt;${row.name}&lt;/td&gt;</p>
<p class="p1"><span class="Apple-converted-space">                        </span>&lt;td&gt;${row.timestamp}&lt;/td&gt;</p>
<p class="p1"><span class="Apple-converted-space">                        </span>&lt;td&gt;${row.status}&lt;/td&gt;</p>
<p class="p1"><span class="Apple-converted-space">                        </span>&lt;td&gt;&lt;button class="delete" onclick="deleteEntry('${row.id}')"&gt;削除&lt;/button&gt;&lt;/td&gt;</p>
<p class="p1"><span class="Apple-converted-space">                    </span>`;</p>
<p class="p1"><span class="Apple-converted-space">                    </span>tableBody.appendChild(tr);</p>
<p class="p1"><span class="Apple-converted-space">                </span>});</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">            </span>} catch (error) {</p>
<p class="p1"><span class="Apple-converted-space">                </span>console.error("データ取得エラー:", error);</p>
<p class="p1"><span class="Apple-converted-space">            </span>}</p>
<p class="p1"><span class="Apple-converted-space">        </span>}</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">        </span>// データ削除処理</p>
<p class="p1"><span class="Apple-converted-space">        </span>async function deleteEntry(id) {</p>
<p class="p1"><span class="Apple-converted-space">            </span>if (!confirm("本当に削除しますか？")) return;</p>
<p class="p1"><span class="Apple-converted-space">            </span>try {</p>
<p class="p1"><span class="Apple-converted-space">                </span>await fetch(`${API_URL}&amp;deleteId=${id}`, { method: "GET" });</p>
<p class="p1"><span class="Apple-converted-space">                </span>alert("削除しました");</p>
<p class="p1"><span class="Apple-converted-space">                </span>fetchEmployees();</p>
<p class="p1"><span class="Apple-converted-space">            </span>} catch (error) {</p>
<p class="p1"><span class="Apple-converted-space">                </span>console.error("削除エラー:", error);</p>
<p class="p1"><span class="Apple-converted-space">            </span>}</p>
<p class="p1"><span class="Apple-converted-space">        </span>}</p>
<p class="p2"><br></p>
<p class="p1"><span class="Apple-converted-space">        </span>fetchEmployees();</p>
<p class="p1"><span class="Apple-converted-space">    </span>&lt;/script&gt;</p>
<p class="p2"><br></p>
